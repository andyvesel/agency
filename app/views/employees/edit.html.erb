<h1>Edit employee</h1>

<%= form_for :employee, url: employee_path(@employee), method: :put do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :contact %><br />
		<%= f.text_area :contact %>
	</p>

	<p>
		<label>Avaliable for job</label><br />
		<%= f.check_box :search %>
	</p>

	<p>
		<%= f.label :salary %><br />
		<%= f.text_area :salary %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>
<p>
	<%= link_to 'Back', employees_path %>
</p>
