<h3>New employee</h3>
<%= form_for :employee, url: employees_path do |f| %>
	<p>
		<label>Name</label><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<label>Phone or mail</label><br />
		<%= f.text_area :contact %>
	</p>

	<p>
		<label>Avaliable for job</label><br />
		<%= f.check_box :search %>
	</p>

	<p>
		<label>Money rate</label><br />
		<%= f.text_area :salary %>
	</p>

	<p>
		<%= f.submit %>
	</p></p>
<% end %>