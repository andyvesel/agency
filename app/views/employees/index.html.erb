<h2>Employees</h2>

<p>
	<%= link_to 'Add new employee', new_employee_path %>
</p>
	<table class="table table-bordered">
	 	<thead>
	 		<td><strong>Name</strong></td>
	 		<td><strong>Contacts</strong></td>
	 		<td><strong>Avaliable for job</strong></td>
	 		<td><strong>Money rate</strong></td>
	 		<td><strong>Skills</strong></td>
	 	</thead>
		<% @employees.each do |employee| %>
	 	<tbody>
				<td>
					<%= employee.name %><br />
					<%= link_to 'Show', employee_path(employee) %> | 
					<%= link_to 'Delete', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
				<td><%= employee.contact %></td>
				<td>
					<% if employee.search == true %>
							Avaliable
						<% else %>
							Busy
					<% end %>
				</td>
				<td><%= employee.salary %></td>
		</tbody>
<% end %>
</table>
